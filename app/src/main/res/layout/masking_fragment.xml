<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mwi.oledsaver.MaskingFragment">

<!--Logo masker-->

    <FrameLayout
        android:id="@+id/logoMasker"
        android:layout_width="116dp"
        android:layout_height="120dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="35dp"
        android:alpha="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/oledBackground"
            android:layout_width="1920px"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:src="@drawable/oled"
            android:translationX="150px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/oledBackground2"
            android:layout_width="1920px"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:src="@drawable/oled"
            android:translationX="-1850px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toStartOf="parent" />
    </FrameLayout>
<!--Stripe masker-->
    <FrameLayout
            android:id="@+id/boldStripeMasker"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="150dp"
            android:layout_marginEnd="180dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">

        <ImageView
                android:id="@+id/boldStripeBackground1"
                android:layout_width="1920px"
                android:layout_height="wrap_content"
                android:adjustViewBounds="false"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:src="@drawable/oled"
                android:translationX="150px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.03"
                app:layout_constraintStart_toStartOf="parent" />

        <ImageView
                android:id="@+id/boldStripeBackground2"
                android:layout_width="1920px"
                android:layout_height="wrap_content"
                android:adjustViewBounds="false"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:src="@drawable/oled"
                android:translationX="-1850px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.03"
                app:layout_constraintStart_toStartOf="parent" />

    </FrameLayout>

    <FrameLayout
            android:id="@+id/thinStripeMasker"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <ImageView
                android:id="@+id/thinStripeBackground1"
                android:layout_width="1920px"
                android:layout_height="wrap_content"
                android:adjustViewBounds="false"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:src="@drawable/oled"
                android:translationX="150px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.03"
                app:layout_constraintStart_toStartOf="parent" />

        <ImageView
                android:id="@+id/thinStripeBackground2"
                android:layout_width="1920px"
                android:layout_height="wrap_content"
                android:adjustViewBounds="false"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:src="@drawable/oled"
                android:translationX="-1850px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.03"
                app:layout_constraintStart_toStartOf="parent" />
    </FrameLayout>
<!--Clock masker-->
    <FrameLayout
            android:id="@+id/clockMasker"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="1dp">

        <ImageView
                android:id="@+id/oledBackground5"
                android:layout_width="1920px"
                android:layout_height="wrap_content"
                android:adjustViewBounds="false"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:src="@drawable/oled"
                android:translationX="150px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.03"
                app:layout_constraintStart_toStartOf="parent" />

        <ImageView
                android:id="@+id/oledBackground6"
                android:layout_width="1920px"
                android:layout_height="wrap_content"
                android:adjustViewBounds="false"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:src="@drawable/oled"
                android:translationX="-1850px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.03"
                app:layout_constraintStart_toStartOf="parent" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>